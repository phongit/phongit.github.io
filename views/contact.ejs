<html>

<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="css/formchat.css" type="text/css" rel="stylesheet">
</head>

<body>
    <div class="container">
        <div class="inbox_msg">
            <div class="menu">
                <div class="avatar"><img src="https://ptetutorials.com/images/user-profile.png" alt="sunil"></div>
                <div class="contact">
                    <a>
                        <span class="fa fa-circle newmesgsTN">
                        </span>
                        <span class="numberTN">2</span>
                    </a>
                    <a>
                        <i class="fa fa-comments-o icon" id="btn-list-friends"></i>
                    </a>
                </div>
                <div class="contact">
                    <a>
                        <span class="fa fa-circle newmesgsDB">
                        </span>
                        <span class="numberDB">9</span>
                    </a>
                    <a>
                        <i class="fa fa-address-book-o active_icon" id="btn-contact"></i>
                    </a>
                </div>
                <div class="setting">
                    <a><i class="fa fa-cog icon" id="btn-setting"></i></a>
                    <div class="dropdown-content">
                        <a href="#">Thông tin cá nhân</a>
                        <a href="#">Đổi mật khẩu</a>
                        <a href="#">Đăng xuất</a>
                    </div>
                </div>
            </div>
            <div class="inbox_people">
                <div class="headind_srch">
                    <div class="recent_heading">
                        <h4 id="recent_heading">Danh bạ</h4>
                    </div>
                    <div class="srch_bar">
                        <div class="stylish-input-group">
                            <input type="text" class="search-bar" placeholder="Tìm kiếm">
                            <span class="input-group-addon">
                                <button type="button"> <i class="fa fa-search" aria-hidden="true"></i> </button>
                            </span> </div>
                    </div>
                </div>
                <div class="inbox_chat" id="inbox_chat">

                </div>
            </div>
            <div class="mesgs" id="mesgs">
                <div id="mesgs-width">
                    <div class="addFriends">
                        <div class="title_add_Friend">
                            <p>Lời mời kết bạn</p>
                        </div>
                        <div class="content-newFriend" id="content-newFriend">

                        </div>
                    </div>

                    <div class="recommendFriends">
                        <div class="title_add_Friend">
                            <p>Gợi ý <input type="text" class="fa fa-search timkiem" placeholder="Tìm kiếm" />
                                <i class="fa fa-search iconSearch" aria-hidden="true"></i></p>
                        </div>
                        <div class="content-recommendFriends" id="content-recommendFriends">

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script>
        var set = function () {
            var x = screen.width;
            var y = screen.availHeight;
            var height = ((window.innerHeight > 0) ? window.innerHeight : this.screen.height) - 1;
            height = height - 70;
            if (height < 1) height = 1;
            if (height > 70) {
                $('#mesgs-width').css("height", (height + 65) + "px");
                $('#inbox_chat').css("height", (height + 20) + "px");
                $('.content-recommendFriends').css("height", (((height + 65) / 100) * 68 - 65) + "px");
                $('.content-newFriend').css("height", (((height + 65) / 100) * 32 - 60) + "px");
            }

            var width = ((window.innerWidth > 0) ? window.innerWidth : this.screen.width);
            $('#mesgs-width').css("width", (width - 360) + "px");
        }
        $(window).ready(set);
        $(window).on("resize", set);

    </script>
    <script src="js/moment-with-locales.min.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="js/script-contact.js"></script>
</body>

</html>